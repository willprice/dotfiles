[user]
	name = Will Price
	email = will.price94@gmail.com
[alias]
  a = add
  ai = add -i
  c = commit
  ca = commit --amend
  co = checkout
  d = diff
  dc = diff --cached
  l = log --oneline --graph --decorate
  la = log --oneline --graph --decorate --all
  rd = reset --hard
  ri = reset --mixed
  s = status
  sv = stash
  p = push
[color "diff"]
	old = red
	new = green
	meta = cyan
[push]
	default = simple
[commit]
	gpgsign = true
[gpg]
	program = gpg2
