_path=""
possible_dirs=("/opt/android-sdk/platform-tools" \
               "$HOME/.bin" "$HOME/.cabal/bin")

for dir in ${possible_dirs[*]}; do
  [[ $PATH =~ $dir ]] && continue
  [[ -d $dir ]] && _path+=":$dir"
done

export PATH="${_path#:}:$PATH"
export CLASSPATH=".:/usr/share/java/*:$CLASSPATH"

# vim: set ft=sh:
